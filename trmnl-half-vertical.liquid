<div class="nba-playoffs">
  <div class="title">NBA Playoffs</div>
  {% assign sorted_games = data | sort: 'date' | reverse %}
  {% assign recent_games = sorted_games | slice: 0, 5 %}
  {% for game in recent_games %}
    <div class="game-card">
      <div class="date">{{ game.date | date: "%m/%d" }}</div>
      <div class="matchup">
        <div class="team {% if game.visitor_team_score > game.home_team_score %}winner{% endif %}">
          <div class="team-content">
            <span class="name">{{ game.visitor_team.abbreviation }}</span>
            <span class="score">{{ game.visitor_team_score }}</span>
            <span class="series-record">({{ game.series_record.visitor_wins }}-{{ game.series_record.home_wins }})</span>
          </div>
        </div>
        <div class="team {% if game.home_team_score > game.visitor_team_score %}winner{% endif %}">
          <div class="team-content">
            <span class="name">{{ game.home_team.abbreviation }}</span>
            <span class="score">{{ game.home_team_score }}</span>
            <span class="series-record">({{ game.series_record.home_wins }}-{{ game.series_record.visitor_wins }})</span>
          </div>
        </div>
      </div>
    </div>
  {% endfor %}
</div>

<style>
.nba-playoffs {
  padding: 8px;
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
  height: 480px;
  display: flex;
  flex-direction: column;
  gap: 8px;
  justify-content: flex-start;
  align-items: center;
}

.title {
  font-size: 28px;
  font-weight: 800;
  margin-bottom: 12px;
  text-align: center;
  letter-spacing: -0.5px;
  text-transform: uppercase;
}

.game-card {
  background: #ffffff;
  border: 2px solid #000000;
  border-radius: 4px;
  padding: 10px;
  width: 80%;
}

.date {
  font-size: 14px;
  font-weight: 500;
  margin-bottom: 6px;
}

.matchup {
  display: flex;
  justify-content: center;
  align-items: baseline;
  gap: 20px;
}

.team {
  display: flex;
  align-items: baseline;
  color: #666666;
}

.team.winner {
  color: #000000;
}

.team-content {
  display: flex;
  align-items: baseline;
  gap: 10px;
}

.name {
  font-size: 18px;
  font-weight: 700;
  line-height: 1;
  letter-spacing: -0.3px;
}

.score {
  font-size: 18px;
  font-weight: 700;
  line-height: 1;
  letter-spacing: -0.3px;
}

.team.winner .name,
.team.winner .score {
  font-size: 22px;
  letter-spacing: -0.4px;
}

.series-record {
  font-size: 12px;
  font-weight: 500;
  line-height: 1;
  letter-spacing: -0.2px;
  color: inherit;
}
</style>
